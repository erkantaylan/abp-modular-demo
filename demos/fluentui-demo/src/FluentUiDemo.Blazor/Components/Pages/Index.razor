@page "/"
@inherits FluentUiDemoComponentBase
@using Microsoft.FluentUI.AspNetCore.Components

<FluentGrid Spacing="3" Justify="JustifyContent.FlexStart">
    <FluentGridItem xs="12" md="8">
        <FluentCard>
            <AuthorizeView>
                <NotAuthorized>
                    <FluentLabel Typo="Typography.H4" Style="margin-bottom: 8px;">@L["Welcome"]</FluentLabel>
                    <FluentLabel Style="margin-bottom: 16px;">@L["LongWelcomeMessage"]</FluentLabel>
                    <FluentButton Appearance="Appearance.Accent" OnClick="Login"
                                  IconStart="@(new Icons.Regular.Size20.PersonArrowRight())"
                                  Style="margin-bottom: 16px;">@L["Login"]</FluentButton>
                </NotAuthorized>
            </AuthorizeView>

            <FluentLabel Typo="Typography.H5" Style="margin-bottom: 8px;">Getting Started</FluentLabel>
            <FluentLabel Style="margin-bottom: 8px;">
                Learn how to create and run a new web application using the application startup template.
            </FluentLabel>
            <FluentAnchor Href="https://abp.io/docs/latest/getting-started" Target="_blank"
                          Appearance="Appearance.Accent" Style="margin-bottom: 16px;">Getting Started</FluentAnchor>

            <FluentLabel Typo="Typography.H5" Style="margin-bottom: 8px; margin-top: 16px;">Web Application Development Tutorial</FluentLabel>
            <FluentLabel Style="margin-bottom: 8px;">
                Learn how to build an ABP based web application named Acme.BookStore.
            </FluentLabel>
            <FluentAnchor Href="https://abp.io/docs/latest/tutorials/book-store/part-1?UI=MVC&DB=EF"
                          Target="_blank" Appearance="Appearance.Outline">Explore Tutorial</FluentAnchor>
        </FluentCard>
    </FluentGridItem>

    <FluentGridItem xs="12" md="4">
        <FluentCard Style="margin-bottom: 16px;">
            <FluentLabel Typo="Typography.H6" Style="margin-bottom: 8px;">FluentUI Blazor Theme</FluentLabel>
            <FluentLabel Typo="Typography.Body">
                This demo uses Microsoft FluentUI Blazor as the UI component library instead of LeptonX Lite / Blazorise,
                proving that ABP's modular architecture works with any Blazor component library.
            </FluentLabel>
        </FluentCard>

        <FluentCard>
            <FluentLabel Typo="Typography.H6" Style="margin-bottom: 8px;">Resources</FluentLabel>
            <FluentStack Orientation="Orientation.Vertical" VerticalGap="4">
                <FluentAnchor Href="https://github.com/abpframework/abp/releases" Target="_blank"
                              Appearance="Appearance.Hypertext">Latest Release Logs</FluentAnchor>
                <FluentAnchor Href="https://abp.io/video-courses/essentials" Target="_blank"
                              Appearance="Appearance.Hypertext">Video Courses</FluentAnchor>
                <FluentAnchor Href="https://abp.io/docs/latest/Samples/Index" Target="_blank"
                              Appearance="Appearance.Hypertext">Samples</FluentAnchor>
                <FluentAnchor Href="https://abp.io/community/" Target="_blank"
                              Appearance="Appearance.Hypertext">ABP Community</FluentAnchor>
                <FluentAnchor Href="https://www.fluentui-blazor.net/" Target="_blank"
                              Appearance="Appearance.Hypertext">FluentUI Blazor Documentation</FluentAnchor>
            </FluentStack>
        </FluentCard>
    </FluentGridItem>
</FluentGrid>
