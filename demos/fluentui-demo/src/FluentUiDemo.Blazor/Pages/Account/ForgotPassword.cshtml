@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.Account.Localization
@model FluentUiDemo.Blazor.Pages.Account.FluentForgotPasswordModel
@inject IHtmlLocalizer<AccountResource> L
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@L["ForgotPassword"] - FluentUI Demo</title>
    <base href="/" />
    <link href="_content/Microsoft.FluentUI.AspNetCore.Components/css/reboot.css" rel="stylesheet" />
    <link href="account-styles.css" rel="stylesheet" />
</head>
<body>
<div class="account-layout">
    <div class="account-card">
        <h4>@L["ForgotPassword"]</h4>
        <form method="post" class="account-form">
            <p class="info-text">@L["SendPasswordResetLink_Information"]</p>

            <div class="form-field">
                <label asp-for="Email"></label>
                <input asp-for="Email" type="email" autofocus />
                <span asp-validation-for="Email" class="validation-error"></span>
            </div>

            <div class="buttons">
                <button type="submit" class="btn-primary">@L["Submit"]</button>
            </div>
        </form>
        <a class="back-link" href="@Url.Page("./Login", new {returnUrl = Model.ReturnUrl, returnUrlHash = Model.ReturnUrlHash})">
            &larr; @L["Login"]
        </a>
    </div>
</div>
</body>
</html>
